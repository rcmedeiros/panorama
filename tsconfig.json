{
    "compilerOptions": {
        "module": "commonjs",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "target": "es2022",
        "noImplicitAny": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "useDefineForClassFields": false,
        "outDir": "dist",
        "baseUrl": "./",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}